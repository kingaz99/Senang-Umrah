<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/on_boarding"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.senangumrah.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_viewPagerFragment"
            app:destination="@id/viewPagerFragment" />
        <action
            android:id="@+id/action_splashFragment_to_homeMenu"
            app:destination="@id/homeMenu" />
    </fragment>
    <fragment
        android:id="@+id/viewPagerFragment"
        android:name="com.example.senangumrah.onboarding.ViewPagerFragment"
        android:label="fragment_view_pager"
        tools:layout="@layout/fragment_view_pager" >
        <action
            android:id="@+id/action_viewPagerFragment_to_homeMenu2"
            app:destination="@id/homeMenu" />
    </fragment>
    <activity
        android:id="@+id/homeMenu"
        android:name="com.example.senangumrah.HomeMenu"
        android:label="activity_home_menu"
        tools:layout="@layout/activity_home_menu" />
</navigation>